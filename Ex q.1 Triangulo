#include <stdio.h>

int main()
{
float a,b,c;
    printf("\nDigite os lados a,b,c:");
    scanf("%f%f%f", &a,&b,&c);
    printf("\nValores: %.1f\t %.1f\t %.1f",a,b,c);
    if((abs(b-c)<a<b+c)&&(abs(a-c)<b<a+c)&&(abs(a-b)<c<a+b))
        if((a==b)&&(b==c))
            printf("\nTriângulo equilátero");
            else if ((a!=b)&&(b!=c)&&(c!=a))
            printf("\nTriângulo escaleno");
            else
            printf("\nTriângulo isósceles");
        else
        printf("\nNão é um triangulo");

    return 0;
}
